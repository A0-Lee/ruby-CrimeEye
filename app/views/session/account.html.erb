<div class="interactPage" id="accountInteract">
<div class="interactContent">
<h1>My Account</h1>
<hr>

<% if Current.user %>
<h3>Welcome, <%= Current.user.email %>!</h3><br>
<div class="hyperlinks">
  <%= link_to 'Change password', edit_password_path %>
  <%= link_to "Logout", logout_path, method: :delete, class: "link", id: "logout" %>
</div>
<% end %>

<% if Current.twitter_user %>
  <h3>Greetings, <%= link_to "@#{Current.twitter_user.username}", "https://twitter.com/#{Current.twitter_user.username}", target: :_blank %>!</h3><br>
  <h4>Enjoy your stay from Twitter!</h4>
<% end %>
</div>
</div>
