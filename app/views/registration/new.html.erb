<div class="interactPage" id="registerInteract">
<div class="interactContent">
<h1>Sign Up</h1>
<hr>
<h2>Register for a new account.</h2><br>

<%= form_with model: @user, url: sign_up_path, local: true do |form| %>
  <%= render "shared/form_errors", form: form %>

  <div class="mb-3">
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="mb-3">
    <%= form.label :date_of_birth %>
    <%= form.date_select :date_of_birth, start_year: 1900, end_year: Date.current.year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>

  <div class="mb-3">
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Sign up", class: "btn btn-primary", id: "interactBtn" %>
    <br><br>
    <%= link_to "Already have an account? Login here.", login_path, class: "hyperlink" %>
  </div>
<% end %>
</div>
</div>
